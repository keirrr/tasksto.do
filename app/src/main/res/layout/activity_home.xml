<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDark"
    tools:context=".HomeActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addBtn_bottomMenu_Home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-35dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/plus_icon"
        app:tint="@color/colorDark"
        app:backgroundTint="@color/colorAccent"
        app:backgroundTintMode="screen"
        app:fabCustomSize="70dp"
        app:fabSize="normal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="@color/colorDark" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <View
            android:id="@+id/border_bottomMenu_Home"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="@color/colorLight" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomMenu_Home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorDark"
            android:paddingVertical="10dp">

            <TableRow
                android:id="@+id/bottomMenu_btns_Home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/userBtn_bottomMenu_Home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00FFFFFF"
                    android:src="@drawable/user_icon" />

                <Space
                    android:layout_width="170dp"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:id="@+id/settingsBtn_bottomMenu_Home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00FFFFFF"
                    android:src="@drawable/list_icon" />
            </TableRow>
        </com.google.android.material.bottomnavigation.BottomNavigationView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>